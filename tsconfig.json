{
  "compilerOptions": {
    /* Base Settings */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],

    /* Cloudflare Workers */
    "types": ["@cloudflare/workers-types"],

    /* Incremental Migration */
    "allowJs": true,
    "checkJs": false,

    /* Strict Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Module Settings */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Output */
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vitest.config.ts",
    "tests/mocks"
  ]
}
